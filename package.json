{
  "name": "app",
  "private": "true",
  "scripts": {
    "build": "yarn build:js && yarn build:css",
    "build:js": "esbuild app/javascript/*.* --bundle --sourcemap --outdir=app/assets/builds --public-path=assets",
    "build:css": "tailwindcss -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css --minify",
    "avo:tailwindcss": "tailwindcss -i ./app/assets/stylesheets/avo.tailwind.css -o ./app/assets/builds/avo.tailwind.css -c ./config/avo/tailwind.config.js --minify"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.1",
    "@hotwired/turbo-rails": "^7.3.0",
    "autoprefixer": "^10.4.13",
    "esbuild": "^0.17.10",
    "postcss": "^8.4.21",
    "tailwindcss": "^3.2.7"
  }
}
